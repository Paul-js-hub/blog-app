<h2 class="welcome">Log In</h2>
<div class="log-container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "flabel" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ftext" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "flabel" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "ftext" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "log-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>